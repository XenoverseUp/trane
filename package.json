{
	"name": "@xenoverseup/trane",
	"version": "0.0.12",
	"license": "MIT",
	"bin": {
		"trane": "npm/cli.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/XenoverseUp/trane.git"
	},
	"bugs": {
		"url": "https://github.com/XenoverseUp/trane/issues"
	},
	"homepage": "https://github.com/XenoverseUp/trane#readme",
	"description": "A modern parallel task runner CLI built with Go.",
	"keywords": [
		"cli",
		"terminal",
		"command-line",
		"tool",
		"automation",
		"task-runner",
		"parallel",
		"concurrent",
		"process",
		"job-runner",
		"run-tasks",
		"async",
		"ink",
		"react",
		"typescript",
		"nodejs",
		"esm",
		"meow",
		"interactive-cli",
		"build-tools",
		"developer-tools",
		"project-tools",
		"trane",
		"xenoverseup",
		"go",
		"bubble-tea"
	],
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
    "build:osx": "cd go && GOOS=darwin GOARCH=amd64 go build -o trane-darwin",
    "build:linux": "cd go && GOOS=linux GOARCH=amd64 go build -o trane-linux",
    "build:windows": "cd go && GOOS=windows GOARCH=amd64 go build -o trane-win.exe",
    "build": "npm run build:osx && npm run build:linux && npm run build:windows",
    "prepublish": "npm run build",
    "postinstall": "chmod +x go/trane-* || true"
  },
  "files": [
    "go/trane-darwin",
    "go/trane-linux",
    "go/trane-win.exe",
    "npm/cli.js",
    "trane-config.d.ts"
  ],
	"types": "trane-config.d.ts",
	"exports": {
		".": {
			"import": "./dist/cli.js",
			"types": "./trane-config.d.ts"
		},
		"./config": {
			"types": "./trane-config.d.ts"
		}
	},
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"ink": "^5.2.1",
		"meow": "^11.0.0",
		"react": "^18.2.0",
		"zod": "^3.25.64"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
